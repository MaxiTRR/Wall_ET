<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FirstFragment">

    <TextView
        android:id="@+id/tvTitleHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/tv_title_home"
        android:textStyle="bold"
        android:textColor="@color/violet"
        android:textSize="32sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvContainer"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/violet"
        android:layout_margin="16dp"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleHome" />
    <TextView
        android:id="@+id/tvSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOLA "
        android:textColor="@color/violet"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/tvContainer2"
        app:layout_constraintEnd_toStartOf="@+id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContainer" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nomApe"
        android:textColor="@color/violet"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/tvContainer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSaludo"
        app:layout_constraintTop_toBottomOf="@id/tvContainer" />
    <TextView
        android:id="@+id/tvContainer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/violet"
        android:layout_marginTop="200dp"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo: $"
        android:textSize="32sp"
        android:textColor="@color/violet"
        app:layout_constraintTop_toBottomOf="@id/tvContainer2"
        app:layout_constraintEnd_toStartOf="@+id/tvAmmount"
        app:layout_constraintBottom_toTopOf="@id/tvContainer3"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvAmmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ammount"
        android:textSize="32sp"
        android:textColor="@color/violet"
        app:layout_constraintTop_toBottomOf="@id/tvContainer2"
        app:layout_constraintStart_toEndOf="@+id/tvSaldo"
        app:layout_constraintBottom_toTopOf="@id/tvContainer3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvContainer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/violet"
        android:textSize="32sp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivET"
         />
    <ImageView
        android:id="@+id/ivET"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:src="@drawable/et2"
        app:layout_constraintTop_toBottomOf="@id/tvContainer3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />



</androidx.constraintlayout.widget.ConstraintLayout>